@using MedicalInformationSystem.Controllers
@model MedicalInformationSystem.ViewModels.NewDoctorViewModel

@{
    ViewBag.Title = "NewDoctor";
    Layout = "~/Views/Shared/_Layout.cshtml";


}
@{
    string massage;
    if (!User.IsInRole(UserRoles.CanApproveAndDeleteRecord))
     {
         massage = "Record Has Been Submitted For Approval";
     }
    else
    {
        massage = "";
    }
}
<h2>New Doctor</h2>

@using (Html.BeginForm("SaveDoctor","Doctor",new {massage = massage}))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Doctor.Name)
        @Html.TextBoxFor(m => m.Doctor.Name,new {@class="form-control"})
        @Html.ValidationMessageFor(m => m.Doctor.Name)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Doctor.Phone)
        @Html.TextBoxFor(m => m.Doctor.Phone, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Doctor.Phone)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Doctor.Address)
        @Html.TextAreaFor(m => m.Doctor.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Doctor.Address)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Doctor.Description)
        @Html.TextAreaFor(m => m.Doctor.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Doctor.Description)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Doctor.HospitalName)
        @Html.TextBoxFor(m => m.Doctor.HospitalName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Doctor.HospitalName)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Doctor.DoctorTypeId)
        @Html.DropDownListFor(m => m.Doctor.DoctorTypeId,new SelectList(Model.DoctorTypes,"Id","Name"),"Select A Type", new {@class="form-control"})
        @Html.ValidationMessageFor(m => m.Doctor.DoctorTypeId)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Doctor.Area)
        @Html.TextBoxFor(m => m.Doctor.Area, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Doctor.Area)
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Doctor.WorkHour)
        @Html.TextBoxFor(m => m.Doctor.WorkHour, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Doctor.WorkHour)
    </div>
    
    @Html.HiddenFor(m => m.Doctor.Id)
    @Html.AntiForgeryToken()
    <input type="submit" value="Save" class="btn btn-primary"/>
}